# ============
# Polybar config
# 
# Thomas Hegghammer
#
# Default config with minor adaptations, mainly for my own records.
# Tested on both Ubuntu and Arch. It's generally harder to get Awesome-Fonts icons to work on Ubuntu, but the ones used here should all work.
# The colours are tailored to this background: https://unsplash.com/photos/Ep18cMhBnlw.
# Proportions are adapted to QHD resolution (2560x1440).
# Font requirements: Inconsolata, Unifont, Siji, Font Awesome
# ============

[colors]
dark-grey-green = #9973715e
black = #000000
medium_grey = #555
orange = #ffb52a
dark_pink = #e60053
green = #008000
red = #f00
white = #ffffff
light_grey = #CC73715e
dark_grey = #3f3f3f
yellow = #ffe135

[bar/myBar1]
width = 100%
height = 30
fixed-center = false
background = ${colors.dark-grey-green}
foreground = ${colors.black}
separator = |
separator-foreground = ${colors.orange}

# space between bar and screen edge
border-size = 0

# space on far ends of bar text
#padding-left = 0
padding-right = 2

# Distance between entries
module-margin-left = 1
module-margin-right = 1

# main text
font-0 = Inconsolata:pixelsize=13;1 
# volume bar (I think) 
font-1 = unifont:fontformat=truetype:size=10:antialias=false;0
# coloured underlines (I think)
font-2 = siji:pixelsize=15;1
# Icons
font-3 = FontAwesome:pixelsize=14;0

modules-left = i3
modules-center = date
modules-right = memory cpu temperature wired-network wireless-network pulseaudio

tray-position = right
tray-padding = 10
tray-background =  ${colors.medium_grey}

#;wm-restack = bspwm
#wm-restack = i3
#;override-redirect = true
#scroll-up = i3wm-wsnext
#scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

[module/i3]
# More details: https://gitlab.com/polybar/polybar/-/wikis/Module:-i3
type = internal/i3
pin-workspaces = false
strip-wsnumbers = false
index-sort = true
enable-click = true
enable-scroll = true
wrapping-scroll = true
reverse-scroll = true
fuzzy-match = true
format-padding = 0
format = <label-state> <label-mode>
label-mode = %name%
label-mode-padding = 0
label-mode-background = ${colors.medium_grey}
label-focused = %name%
label-focused-foreground = ${colors.orange}
label-focused-background = ${colors.black}
label-focused-padding = 2
label-unfocused-background = ${colors.medium_grey}
label-unfocused-foreground = ${colors.black}
label-unfocused = %name%
label-unfocused-padding = 2
label-visible = %name%
label-visible-padding = 2
label-urgent = %name%
label-urgent-background = ${colors.green}
label-urgent-padding = 2

[module/memory]
type = internal/memory
interval = 2
format-prefix = "RAM:"
format-prefix-foreground = ${colors.light_grey}
label = %percentage_used%%
label-foreground = ${colors.white}

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "CPU:"
format-prefix-foreground = ${colors.light_grey}
label = %percentage%%
label-foreground = ${colors.white}

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60
format = <label>
label = %temperature-c%
format-prefix = " CPU "
format-prefix-foreground = ${colors.light_grey}
label-foreground = ${colors.white}


[module/wired-network]
type = internal/network
interface = enp7s0
interval = 3.0
accumulate-stats = true
format-connected = <label-connected>
format-disconnected = <label-disconnected>
label-connected =  ethernet
label-connected-foreground = ${colors.green}
label-disconnected = no ethernet
label-disconnected-foreground = ${colors.red}

[module/wireless-network]
type = internal/network
interface = wlp6s0
interval = 3.0
accumulate-stats = true
format-connected = <label-connected>
format-disconnected = <label-disconnected>
label-connected =   %essid%
label-connected-foreground = ${colors.green}
label-disconnected = no wifi
label-disconnected-foreground = ${colors.red}

[module/pulseaudio]
# Not entirely sure if this works as it should
type = internal/pulseaudio
format-volume = <label-volume> <bar-volume>
label-volume =  %percentage%%
label-volume-foreground = ${colors.white}
label-muted = muted
label-muted-foreground = ${colors.red}
bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 10
bar-volume-fill = ─
bar-volume-fill-font = 10
bar-volume-empty = ─
bar-volume-empty-font = 10
bar-volume-empty-foreground = ${colors.black}

[module/date]
type = internal/date
interval = 5
date = "%d %B %Y"
date-alt = " %Y-%m-%d"
time = %H:%M:%S
time-alt = %H:%M:%S
label =  %date% %time%
label-foreground = ${colors.yellow}

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

[global/wm]
margin-top = 5
margin-bottom = 5

